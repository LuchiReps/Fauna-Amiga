<div class="container">
    <div class="row">
        <div class="col">
            <h2 style="margin-top: 200px;">Modificar la Novedad</h2>
            <form action="/admin/novedades/modificar" method="post">
                <input type="hidden" value="{{novedad.id}}" name="id">

                <div class="mb-3"><label class="form-label" style="color: pink;">Titulo</label>
                    <input type="text" name="titulo" class="form-control" name="titulo" placeholder="titulo"
                        value="{{novedad.titulo}}">
                </div>
                <div class="mb-3">
                    <label class="form-label" style="color: pink;">Subtitulo</label>
                    <textarea class="form-control" name="subtitulo" rows="3">{{novedad.subtitulo}}</textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label" style="color: pink;">Cuerpo</label>
                    <textarea class="form-control" name="cuerpo" rows="3">{{novedad.cuerpo}}</textarea>
                </div>

                <div class="col-auto"><button type="submit" class="btn btn-primary mb-3">MODIFICAR</button></div>

            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}

        </div>
    </div>

</div>