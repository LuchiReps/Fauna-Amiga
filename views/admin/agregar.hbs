<div class="container">
    <div class="row">
        <div class="col">
            <h2 style="margin-top: 200px;">Agregar Novedad</h2>
            <form action="/admin/novedades/agregar" method="post">

                <div class="mb-3"><label class="form-label" style="color: pink;">Titulo</label>
                    <input type="text" name="titulo" class="form-control" name="titulo" placeholder="titulo">
                </div>
                <div class="mb-3">
                    <label class="form-label" style="color: pink;">Subtitulo</label>
                    <textarea class="form-control" name="subtitulo" rows="3"></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label" style="color: pink;">Cuerpo</label>
                    <textarea class="form-control" name="cuerpo" rows="3"></textarea>
                </div>

                <div class="col-auto"><button type="submit" class="btn btn-primary mb-3">GUARDAR</button></div>

            </form>
            {{#if error}}
            <p style="color:white ; text-align:center; ">{{message}}</p>
            {{/if}}
        </div>
    </div>

</div>