<div class="container">
    <div class="row">
        <div class="col">
            <h2>Agregar Novedad</h2>
            <form action="/admin/novedades/agregar" method="post">

                <div class="mb-3"><label class="form-label"style="color: pink;">Titulo</label>
                    <input type="text" name="titulo" class="form-control" name="titulo" placeholder="titulo">
                </div>
                <div class="mb-3">
                    <label class="form-label"  name="subtitulo" style="color: pink;">Subtitulo</label>
                    <textarea class="form-control" rows="3"></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label"  name="cuerpo"style="color: pink;">Cuerpo</label>
                    <textarea class="form-control" rows="3"></textarea>
                </div>

                <div class="col-auto"><button type="submit" class="btn btn-primary mb-3">GUARDAR</button></div>

            </form>

            {{#if error}}
            <p>Usuario y/o password incorrectos </p>
            {{/if}}
        </div>
    </div>

</div>