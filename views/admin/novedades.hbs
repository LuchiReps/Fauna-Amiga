<div class="container margenes">
  <div class="row">
    <div class="col">
      <p class="parrafo">Hola {{persona}} !</p>
    </div>
  </div>

  <div class="row">
    <div class="col-7">
      <h2>Listado de Novedades</h2>
    </div>

    <div class="col-5 ">
      <a href="/admin/novedades/agregar" class="btn btn-success">Nuevo</a>
      <a href="" class="btn btn-danger">Cerrar Sesion</a>
    </div>

  </div>

  <div class="tabla">
    <div class="row">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Titulo</th>
            <th scope="col">Acciones</th>

          </tr>
        </thead>
        <tbody>
          {{#each novedades }}

          <tr>
            <th scope="row">{{id}}</th>
            <td>{{titulo}}</td>
            <td class="text-end">
              <a href="" class="btn btn-secondary">Modificar</a>
              <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary">Eliminar</a>
            </td>

          </tr>
          {{/each}}
        </tbody>
      </table>
    
    </div>

  </div>
</div>